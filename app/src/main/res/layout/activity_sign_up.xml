<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_sign_up"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="chiangli.edu.calpoly.edu.slosaferide.SignUpActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/gogologo"
        android:id="@+id/gogologo"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="54dp"
        android:layout_marginBottom="36dp"/>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="48dp"
        android:ems="14"
        android:inputType="textEmailAddress"
        android:id="@+id/email"
        android:layout_below="@id/gogologo"
        android:hint="Email"
        android:layout_marginBottom="1dp"/>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="48dp"
        android:ems="14"
        android:inputType="textPassword"
        android:id="@+id/password"
        android:layout_below="@id/email"
        android:hint="Password"
        android:layout_marginBottom="1dp"/>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="14"
        android:id="@+id/reenterpassword"
        android:layout_below="@id/password"
        android:hint="Re-Enter Password"
        android:layout_marginLeft="48dp"
        android:layout_marginBottom="18dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:id="@+id/signup"
        android:layout_below="@id/reenterpassword"
        android:background="@drawable/gogosignup"
        android:layout_marginBottom="16dp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:id="@+id/gogoor"
        android:layout_below="@id/signup"
        android:src="@drawable/gogoor"
        android:layout_marginBottom="16dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:id="@+id/facebook"
        android:background="@drawable/gogofb"
        android:layout_below="@+id/gogoor"
        android:layout_marginBottom="14dp"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:id="@+id/google"
        android:background="@drawable/gogogoogle"
        android:layout_below="@+id/facebook"
        android:layout_marginBottom="6dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="Already have an account? Sign In"
        android:id="@+id/SIGNIN"
        android:layout_below="@+id/google"/>

</RelativeLayout>
