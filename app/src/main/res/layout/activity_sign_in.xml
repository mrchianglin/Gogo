<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_sign_in"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="chiangli.edu.calpoly.edu.slosaferide.SignInActivity">
    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">
    </android.support.design.widget.AppBarLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/headerSignIn"
        android:layout_marginTop="-25dp"
        android:src="@drawable/gogoheader"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:hint="Email"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="48dp"
        android:layout_centerInParent="true"
        android:ems="15"
        android:id="@+id/editTextSignIn"
        android:layout_below="@+id/headerSignIn"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:layout_centerInParent="true"
        android:hint="Password"
        android:ems="15"
        android:layout_marginLeft="48dp"
        android:layout_marginBottom="24dp"
        android:layout_below="@+id/editTextSignIn"
        android:layout_alignParentStart="true"
        android:id="@+id/editText2" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/login"
        android:layout_centerInParent="true"
        android:layout_marginBottom="8dp"
        android:layout_below="@+id/editText2"
        android:background="@drawable/gogologin"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:text="Don't have an account? Sign up"
        android:id="@+id/signUpIn"
        android:layout_below="@+id/login"/>
</RelativeLayout>
